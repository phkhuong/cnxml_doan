@using System.Xml;
@{    
    //****************** Khởi động Dữ liệu Nguồn-Nội bộ **********
    var Du_lieu = XL_LUU_TRU.Doc_Du_lieu();
    var Cong_ty = (XmlElement)Du_lieu.GetElementsByTagName("Cong_ty")[0];
    var Danh_sach_Laptop =(XmlElement) Du_lieu.GetElementsByTagName("Danh_sach_Laptop")[0];
    var Danh_sach_Phieu_dat = (XmlElement)Du_lieu.GetElementsByTagName("Danh_sach_Phieu_dat")[0];

    // Hard-coded QUAN_LY
    string selector = String.Format("//Quan_ly[@Ma_so='{0}']", "QL_1");
    XmlElement Quan_ly = (XmlElement)Cong_ty.SelectSingleNode(selector);


    //******************* Khai báo Biến  ********************
    var Danh_sach_Phieu_dat_Xem = Danh_sach_Phieu_dat; // Biến Kết quả 

    //******************* Nhập liệu cho Biến Nhập nếu có - Tính Biến kết quả nếu Hợp lệ   *****************
    Session["Chuoi_Tra_cuu"] = "";

    if (Request["Th_Chuoi_Tra_cuu"] != null)
    {
        Session["Chuoi_Tra_cuu"] = Request["Th_Chuoi_Tra_cuu"];

    }

    //******************* Kết xuất  **********
    var Chuoi_Tra_cuu = Session["Chuoi_Tra_cuu"];
    var Chuoi_HTML_Danh_sach_Phieu_dat = XL_THE_HIEN.Tao_Chuoi_HTML_Danh_sach_Phieu_dat(Danh_sach_Phieu_dat_Xem);
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    <link rel="stylesheet" href="DD_Chinh.css?v=@DateTime.Now.Ticks" type="text/css" />
</head>
<body>

    <div class="container-fluid">
        
        <div class="row TIEU_DE justify-content-center">
            <div class="col-md-10 col-md-offset-1 content-section">
                <div class="row align-items-center">
                    <div class="col-md-2 col-sm-2 col-3 LOGO">
                        <img src="@XL_THE_HIEN.Dia_chi_Media/LOGO.png" />
                    </div>
                    <div class="col-md-6 col-sm-6 col-5 TIM_KIEM">
                        <form id="HE_THONG" name="HE_THONG" action="MH_Chinh.cshtml" method="post">
                            <input type="text" id="Th_Chuoi_Tra_cuu" name="Th_Chuoi_Tra_cuu" value="@Chuoi_Tra_cuu" class="form-control" placeholder="Nhập tên sản phẩm, từ khóa cần tìm..." />
                        </form>
                    </div>
                    <div class="col-md-3 offset-md-1 col-sm-4 col-4 NGUOI_DUNG">
                        <div class="header-cart">
                            <img src="@XL_THE_HIEN.Dia_chi_Media/CART.svg" class="CART_ICON" />
                            <div class="description">
                                <div class="text-cart d-none d-md-block">
                                    Giỏ Hàng
                                </div>
                                <div class="shopping-cart-header">
                                    (0) sản phẩm
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

            <div class="row DANH_SACH_CHUC_NANG">
                <table class="table-responsive">
                    <thead>
                        <tr id="Th_Danh_sach_Chuc_nang">
                            <td id="MH_Danh_sach_Phieu_dat" class="CHUC_NANG">
                                DANH SÁCH PHIẾU ĐẶT
                            </td>
                        </tr>
                    </thead>
                </table>
            </div>
        <div class="row">
            <iframe class="KHUNG_CHUC_NANG" id='Khung_Chuc_nang'></iframe>
        </div>
        </div>
    
    
    @*<div class="CUA_SO_KET_QUA" style="background-color:white;margin:10px">
        @Html.Raw(Chuoi_HTML_Danh_sach_Laptop)
    </div>*@
    <script>
        MH_Danh_sach_Phieu_dat.onclick = () => {
            Khung_Chuc_nang.src = "MH_Danh_sach_Phieu_dat.cshtml";
            Danh_dau_Chon_Chuc_nang(MH_Danh_sach_Phieu_dat);
        }

        function Chon_Chuc_nang(Chuc_nang_Chon) {
            for (var i = 0; i < Th_Danh_sach_Chuc_nang.childNodes.length; i++) {
                if (Th_Danh_sach_Chuc_nang.childNodes[i].id == Chuc_nang_Chon) {
                    Th_Danh_sach_Chuc_nang.childNodes[i].click();
                    return;
                }
            }
        }

        function Danh_dau_Chon_Chuc_nang(Th_Chuc_nang_Chon) {
            for (var i = 0; i < Th_Danh_sach_Chuc_nang.childNodes.length; i++)
                Th_Danh_sach_Chuc_nang.childNodes[i].className = "CHUC_NANG";
            Th_Chuc_nang_Chon.className += " CHON";
        }
    </script>

    @if (Session["Chuc_nang_Chon"] == null)
    {
        <script>MH_Danh_sach_Phieu_dat.click();</script>
    }
    else
    {
        <script>Chon_Chuc_nang('@Session["Chuc_nang_Chon"]');</script>
    }
</body>
</html>
